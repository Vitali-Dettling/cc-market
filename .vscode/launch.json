    //nodemode debugging:
    //https://code.visualstudio.com/docs/nodejs/nodejs-debugging

    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch via nodemon",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "nodemon",
            "runtimeArgs": [
                "--debug=5858"
            ],
            "program": "${workspaceRoot}/server.js",
            "restart": true,
            "port": 5858,
            "console": "internalConsole",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}